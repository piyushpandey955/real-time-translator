{
  "manifest_version": 3,
  "name": "Real-Time Meeting Translator",
  "version": "1.0.0",
  "description": "AI-powered real-time translation for Google Meet, Zoom, Teams, and other video conferencing platforms. Perfect for multilingual meetings!",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://meet.google.com/*",
    "*://zoom.us/*",
    "*://teams.microsoft.com/*",
    "*://webex.com/*",
    "*://*.webex.com/*",
    "*://whereby.com/*",
    "*://discord.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://meet.google.com/*",
        "*://zoom.us/*", 
        "*://teams.microsoft.com/*",
        "*://webex.com/*",
        "*://*.webex.com/*",
        "*://whereby.com/*",
        "*://discord.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Real-Time Meeting Translator - Click to open translator"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["web-app/*"],
      "matches": ["<all_urls>"]
    }
  ]
}